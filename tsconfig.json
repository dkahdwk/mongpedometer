{
  "compilerOptions": {
    "allowJs": true,
    "module": "es2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // ts에서의 import 구문을 js처럼 써도 에러가 안뜨게 함.
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types", "src/types"],
    "outDir": "./dist",
    "paths": {
      "*": ["*"]
    },
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "aspect-ratio",
            "elevation",
            "margin-vertical",
            "margin-horizontal",
            "padding-horizontal",
            "padding-vertical",
            "resize-mode",
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "text-align-vertical",
            "tint-color"
          ]
        }
      }
    ]
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
